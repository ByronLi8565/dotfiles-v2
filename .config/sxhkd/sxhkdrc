#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty
super + R
	kitty vimclip

# program launcher
super + p
    rofi -show combi -combi-modi "drun,ssh"
# alt tab
alt + Tab
    ~/bin/alttab
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
super + {_,shift +}v
	pamixer --{increase,decrease} 5
super + shift + s
	maim -s | xclip -selection clipboard -t image/png

super + shift + c
	maim -st 0 | convert - -resize 1x1\! -format '%[pixel:p{0,0}]' info:- | xclip -sel clip
# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + @space 
	bspc desktop -l next
# adjust gaps
super + {_,shift + }b
    { bspc config window_gap $(( $(bspc config window_gap) + 4 )), \
    [ $(bspc config window_gap) -ge 4 ] && \
    bspc config window_gap $(( $(bspc config window_gap) - 4 )) }
super + o
	xdo show -a tint2 && bspc config left_padding 42
super + shift + o
	xdo hide -a tint2 && bspc config left_padding 0

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# move/resize
#
super + alt + {h,j,k,l} 
  n=30; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

